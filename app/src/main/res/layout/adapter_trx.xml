<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="#fff"
    android:id="@+id/layoutAdapter"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            >

            <TextView
                android:id="@+id/v_jenis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:padding="5dp"
                android:text="Pemasukan/Pengeluaran"
                android:textColor="@color/kuning"
                android:textSize="20dp"
                android:textStyle="bold"
                 />

            <Button
                android:id="@+id/hapus"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/kuning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableRight="@drawable/ic_delete"
                android:gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_klik"
            android:weightSum="10"
            >

            <TextView
                android:id="@+id/v_tgl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="5dp"
                android:text="2019-11-01"

                />
            <TextView
                android:id="@+id/v_jumlah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:padding="5dp"
                android:text="Rp.1.000.000"
                android:textSize="20dp"
                android:gravity="end"
                android:textStyle="bold" />




        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_klik2"
        android:weightSum="10"
        >

        <TextView
            android:id="@+id/v_ket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:padding="5dp"
            android:text="Uang belanja"
             />

        <TextView
            android:id="@+id/v_bukti"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Struk"
            android:textSize="10dp"
            android:gravity="end"
            />
    </LinearLayout>


    </LinearLayout>